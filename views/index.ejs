<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather App</title>
    <link href="styles.css" rel="stylesheet">

    <!-- Google Fonts: Montserrat -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Weather Card  -->
    <div class="card">
        <form action="/submit" method="POST">
            <div class="search">
                <input type="text" name="cityName" placeholder="Enter City Name" spellcheck="false">
                <button type="submit"><img src="images/search.png" alt="Search Button"></button>
            </div>
        </form>
        <!-- image and weather info -->
         <% if (locals.content) { %>
            <div class="weather">
                <img src="images/<%=content.weather[0].main.toLowerCase()%>.png" class="weather-icon" alt="weather icon">
                <h1 class="temp"><%= Math.round(content.main.temp) + "Â°F" %></h1>
                <h2 class="city"><%= content.name %></h2>
                <div class="details">
                    <!-- humidity and wind speed info -->
                    <div class="col">
                        <img src="images/humidity.png" alt="humidity">
                        <div>
                            <p class="humidity"><%- content.main.humidity %>%</p>
                            <p>humidity</p>
                        </div>
                    </div>
                    <div class="col">
                        <img src="images/wind.png" alt="wind">
                        <div>
                            <p class="wind"> <%= Math.round(content.wind.speed)%> km/hr</p>
                            <p>Wind Speed</p>
                        </div>
                    </div>
                </div>
            </div>
        <% } else { %>
            <p class="error">No city found. Please try again.</p>
         <% } %>   
    </div>
</body>
</html>